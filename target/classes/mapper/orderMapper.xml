<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meidiandian.entity.Order">
	<resultMap type="order" id="goodsMap">
		<result property="orderID" column="order_id"/>
		<result property="userID" column="user_id"/>
		<result property="username" column="user_name"/>
		<result property="userAddress" column="user_address"/>
		<result property="orderTime" column="order_time"/>
		<result property="totalCost" column="total_cost"/>
		<result property="payStatus" column="pay_status"/>
	</resultMap>
	
	<!-- 保存生成的订单 -->
	<insert id="saveOrder" parameterType="order">
		insert into order (order_id, user_id, user_name, user_address, order_time, total_cost, pay_status)
		values(#{orderID},#{userID},#{username},#{userAddress},#{orderTime},#{totalCost},#{payStatus});
	</insert>
	
</mapper>